  },
  "iterator": {
    "type": "basic",
    "batch_size": 10
  },

  "trainer": {
    "num_epochs": 2,
    "cuda_device": -1,
    "grad_clipping": 5.0,
    "validation_metric": "-loss",
    "optimizer": {
      "type": "adam",
      "lr": 0.001
    }
  }
